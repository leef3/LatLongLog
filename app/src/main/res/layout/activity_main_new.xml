<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        cardview:cardElevation="10dp"
        cardview:cardBackgroundColor="#37474F"
        cardview:cardCornerRadius="10dp">


    </android.support.v7.widget.CardView>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_gravity="center_horizontal">

        <android.support.v7.widget.CardView
            xmlns:cardview="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="7dp"
            cardview:cardElevation="10dp"
            cardview:cardBackgroundColor="#37474F"
            cardview:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ico_satellite"
                android:layout_gravity="center_horizontal" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:cardview="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="7dp"
            cardview:cardElevation="10dp"
            cardview:cardBackgroundColor="#37474F"
            cardview:cardCornerRadius="10dp">
            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_update"
                android:layout_gravity="center_horizontal" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal">
        <android.support.v7.widget.CardView
            xmlns:cardview="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="7dp"
            cardview:cardElevation="10dp"
            cardview:cardBackgroundColor="#37474F"
            cardview:cardCornerRadius="10dp">
            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_accuracy"
                android:layout_gravity="center_horizontal" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:cardview="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="7dp"
            cardview:cardElevation="10dp"
            cardview:cardBackgroundColor="#37474F"
            cardview:cardCornerRadius="10dp">
            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_altitude"
                android:layout_gravity="center_horizontal" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Start GPS Stream Logging"
            android:id="@+id/openStreamButton"
            android:layout_weight="1"
            android:layout_marginRight="10dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/snapshotButton"
            android:background="@drawable/pinicon" />
    </LinearLayout>

</LinearLayout>